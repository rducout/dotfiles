{
    "root": "./dotfiles",
    "sudo": false,
    "links": {
        "~/.bash": "common/bash",
        "~/.oh-my-zsh/custom/aliases.zsh": "common/zsh/custom/aliases.zsh",
        "~/.oh-my-zsh/custom/config.zsh": "common/zsh/custom/config.zsh",
        "~/.oh-my-zsh/custom/functions.zsh": "common/zsh/custom/functions.zsh",
        "~/.oh-my-zsh/custom/init.zsh": "common/zsh/custom/init.zsh",
        "~/.bash_profile": "common/.bash_profile",
        "~/.config/autostart/code_code.desktop": "ubuntu/config/autostart/code_code.desktop",
        "~/.config/autostart/google-chrome.desktop": "ubuntu/config/autostart/google-chrome.desktop",
        "~/.config/autostart/conky.desktop": "ubuntu/config/autostart/conky.desktop",
        "~/.config/Code/User/settings.json": "ubuntu/config/code/settings.json",
        "~/.config/nautilus/desktop-metadata": "ubuntu/config/nautilus/desktop-metadata",
        "~/.config/user-dirs.dirs":  "ubuntu/config/user-dirs.dirs",
        "~/.config/mimeapps.list": "ubuntu/config/mimeapps.list",
        "~/.config/neofetch/config.conf": "common/config/neofetch/config.conf",
        "~/.config/tilix/schemes": "ubuntu/config/tilix/schemes",
        "~/.config/conky/conky.conf": {
            "create_dir": true,
            "path": "ubuntu/config/conky/conky.conf"
        },
        "~/.config/bpytop/bpytop.conf": "common/config/bpytop/bpytop.conf",
        "~/.local/share/applications/com.gexperts.Tilix.desktop": "ubuntu/local/share/applications/com.gexperts.Tilix.desktop",
        "~/.local/share/gtksourceview-4": "ubuntu/local/share/gtksourceview-4",
        "~/.zshrc": "ubuntu/.zshrc",
        "~/.zshenv": "common/.zshenv",
        "~/.p10k.zsh": "common/.p10k.zsh"
    },
    "appends": {
        "~/.bashrc": "common/.bashrc"
    },
    "runs": {
        "common/git/apply.sh": {
            "description": "update git configuration."
        },
        "ubuntu/dconf/apply.sh": {
            "description": "apply dconf files."
        }
    }
}
