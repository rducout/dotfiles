{
    "root": "./dotfiles",
    "sudo": false,
    "links": {
        "~/.bash": "bash",
        "~/.oh-my-zsh/custom/aliases.zsh": "zsh/custom/aliases.zsh",
        "~/.oh-my-zsh/custom/config.zsh": "zsh/custom/config.zsh",
        "~/.oh-my-zsh/custom/functions.zsh": "zsh/custom/functions.zsh",
        "~/.oh-my-zsh/custom/init.zsh": "zsh/custom/init.zsh",
        "~/.bash_profile": ".bash_profile",
        "~/.config/autostart/code_code.desktop": "config/autostart/code_code.desktop",
        "~/.config/autostart/google-chrome.desktop": "config/autostart/google-chrome.desktop",
        "~/.config/autostart/conky.desktop": "config/autostart/conky.desktop",
        "~/.config/Code/User/settings.json": "config/code/settings.json",
        "~/.config/nautilus/desktop-metadata": "config/nautilus/desktop-metadata",
        "~/.config/user-dirs.dirs":  "config/user-dirs.dirs",
        "~/.config/mimeapps.list": "config/mimeapps.list",
        "~/.config/neofetch/config.conf": "config/neofetch/config.conf",
        "~/.config/tilix/schemes": "config/tilix/schemes",
        "~/.config/conky/conky.conf": {
            "create_dir": true,
            "path": "config/conky/conky.conf"
        },
        "~/.local/share/applications/com.gexperts.Tilix.desktop": "local/share/applications/com.gexperts.Tilix.desktop",
        "~/.local/share/gtksourceview-4": "local/share/gtksourceview-4",
        "~/.zshrc": ".zshrc",
        "~/.zshenv": ".zshenv",
        "~/.p10k.zsh": ".p10k.zsh"
    },
    "appends": {
        "~/.bashrc": ".bashrc"
    },
    "runs": {
        "git/apply.sh": {
            "description": "update git configuration."
        },
        "dconf/apply.sh": {
            "description": "apply dconf files."
        }
    }
}
