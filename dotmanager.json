{
    "root": "./dotfiles",
    "links": {
        "~/.bash_profile": {
            "path": ".bash_profile",
            "force": true
        },
        "~/.bash": {
            "path": "bash",
            "force": true
        },
        "~/.config/Code/User/settings.json": {
            "path": "code/settings.json",
            "force": true
        }
    },
    "append": {
        "~/.bashrc": ".bashrc"
    }
}