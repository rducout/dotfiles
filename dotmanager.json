{
    "root": "./dotfiles",
    "user_root": "/home/romain",
    "sudo": true,
    "links": {
        "{user_root}/.bash": "bash",
        "{user_root}/.oh-my-zsh/custom/aliases.zsh": "zsh/custom/aliases.zsh",
        "{user_root}/.oh-my-zsh/custom/config.zsh": "zsh/custom/config.zsh",
        "{user_root}/.oh-my-zsh/custom/functions.zsh": "zsh/custom/functions.zsh",
        "{user_root}/.oh-my-zsh/custom/init.zsh": "zsh/custom/init.zsh",
        "{user_root}/.bash_profile": ".bash_profile",
        "{user_root}/.config/Code/User/settings.json": "config/code/settings.json",
        "{user_root}/.config/nautilus/desktop-metadata": "config/nautilus/desktop-metadata",
        "{user_root}/.config/user-dirs.dirs":  "config/user-dirs.dirs",
        "{user_root}/.config/mimeapps.list": "config/mimeapps.list",
        "{user_root}/.zshrc": ".zshrc",
        "{user_root}/.zshenv": ".zshenv",
        "{user_root}/.p10k.zsh": ".p10k.zsh",
        "/usr/share/fonts/custom": "fonts"
    },
    "appends": {
        "~/.bashrc": ".bashrc"
    },
    "runs": {
        "git/add.sh": {
            "description": "update git configuration."
        }
    }
}
