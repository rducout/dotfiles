{
    "root": "./",
    "sudo": false,
    "links": {
        "links/common": "~/",
        "links/ubuntu": "~/"
    },
    "appends": {
        "~/.bashrc": "appends/.bashrc"
    },
    "runs": {
        "scripts/common/git/apply.sh": {
            "description": "update git configuration."
        },
        "scripts/ubuntu/dconf/apply.sh": {
            "description": "apply dconf files."
        },
        "scripts/common/apply.sh": {
            "description": "common setup scripts."
        }
    }
}
